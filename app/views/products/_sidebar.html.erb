<div class="search-form bg-light" >
<h2 class="search-heading bg-light"style="font-size:24px; font-family:cursive;">
  商品検索
</h2>

<%= search_form_for @search, url: products_search_path do |f| %>
  <%= f.label :name_eq, '商品名:' %>
  <br>
  <%= f.collection_select :name_eq, @products, :name, :name,  {include_blank: '指定なし'},{class:"product-name-select"} %>
  <br>
  <br>
   <%= f.label :brand_eq, 'ブランド:' %>
   <br>
    <%= f.collection_select :brand_eq, @product_brand, :brand, :brand, {include_blank: '指定なし'}, {class:"product-brand-select"}%>
    <br>
    <br>
    <%= f.label :price, '価格：' %>
  <%= f.radio_button :price_lteq, '' %>
  指定なし
  <br>
  <%= f.radio_button :price_lteq, '30000' %>
  30000円以下
  <br>
  <%= f.radio_button :price_lteq, '50000' %>
  50000円以下
  <br>
  <%= f.radio_button :price_lteq, '100000' %>
  100000円以下
  <br>
  <%= f.radio_button :price_lteq, '150000' %>
  150000円以下
  <br>

  <%= f.label :tags_tag_name_eq, 'タグ一覧:' %>
  <br>
  <%= f.collection_select :tags_tag_name_eq, @tag_name, :tag_name, :tag_name,  {include_blank: '指定なし'}, {class:"tag-name-select"} %>
 <br>
 <br>
  <%= f.submit '検索' ,class:"submit" %>
<% end %>


</div>