      <ul class="item-lists my-4">
       <% @products.each do |product| %>
            <li class='list'>
              <%= link_to product_path(product.id) do %>
                <div class='item-img-content'>
                  <%= image_tag product.image.variant(resize:'150x130') if product.image.attached? %>
                   <% end %>
                </div>
                <div class='item-info'>
                  <h3 class='item-name mxy-3'>
                    <%= product.name %>
                  </h3>
                  <div class='item-price'>
                    <span><%= product.price %>円<br>(税込み)</span>
                    <%= link_to product_path(product.id) do %>
                   <div><button type="button" class="btn btn-secondary item-detail">商品詳細</button></div>
                    <% end %>
                  </div>
                </div>
            </li>
            <% end %>
        </ul>

